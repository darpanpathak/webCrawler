<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <title>WebCrawler demo</title>
    <meta name="generator" content="Bootply" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <!--[if lt IE 9]>
			<script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
    <link href="css/styles.css" rel="stylesheet">
</head>

<body>

    <div class="navbar navbar-default">
        <div class="container">
            <a class="navbar-brand" href="#">Company Logo</a>
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">menu 1</a></li>
                <li><a href="#">menu 2</a></li>
            </ul>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <form class="form-inline" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" id="txtQuery1" name="txtQuery1" value="<%= txtValue %>" placeholder="Search Keyword">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="txtcurrentpage" name="txtcurrentpage" value="<%= currentPage %>" />
                    </div>

                    <button type="submit" class="btn btn-primary" id="btnQuery1">SEARCH</button>
                    <div class="form-group">
                        <label>  <%=resultText %> </label>
                    </div>
                </form>

            </div>
        </div>
        <br/>
        <div class="row">
        
            <h4><%=msg%></h4>
        
            <div class="col-height">
                <% for(var i=0; i < productlist.length; i++) { %>

                    <div class="col-sm-3 col-lg-3 col-md-3 row-eq-height">
                        <div class="thumbnail">
                            <img src="<%= productlist[i].productImage %>" alt="<%= productlist[i].productName %>">
                            <div class="caption">
                                <h4><%=productlist[i].price %></h4>
                                <h4><a href="#"><%= productlist[i].productName %></a>
                                </h4>
                                <p>Description </p>
                            </div>
                            <!--<div class="ratings">
                                <p class="pull-right">15 reviews</p>
                                <p>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                </p>
                            </div>-->
                        </div>
                    </div>
                    <% } %>
            </div>
            
            <div style="clear:both">
            <% if (pageCount > 1) { %>
                <ul class="pagination">
                    <% if (currentPage > 1) { %>
                        <li><a href="#" onclick="submitPagination('1')">&laquo;</a></li>
                        <% } %>
                            <% var i = 1; if (currentPage > 5) { i = +currentPage - 4;  } %>
                                <% if (i !== 1) { %>
                                    <li class="disabled"><a href="#">...</a></li>
                                    <% } %>
                                        <% for (i; i<=pageCount; i++) { %>
                                            <% if (currentPage == i) { %>
                                                <li class="active"><span><%= i %> <span class="sr-only">(current)</span></span>
                                                </li>
                                                <% } else { %>
                                                    <li>
                                                        <a href="#" onclick="submitPagination('<%= i %>')">
                                                            <%= i %>
                                                        </a>
                                                    </li>
                                                    <% } %>
                                                        <% if (i == (+currentPage + 4)) { %>
                                                            <li class="disabled"><a href="#">...</a></li>
                                                            <% break; } %>
                                                                <% } %>
                                                                    <% if (currentPage != pageCount) { %>
                                                                        <li><a href="#" onclick="submitPagination('<%= pageCount %>')">&raquo;</a></li>
                                                                        <% } %>
                </ul>
                <% } %>
            </div>
        </div>

    </div>
    <!-- /container -->
    <!-- script references -->
    <script src="js/jquery_2.0.2.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script type="text/javascript">
        function submitPagination(pageNumber){
            $('#txtcurrentpage').val(pageNumber);
            $('form').submit();
        }
    </script>
</body>

</html>